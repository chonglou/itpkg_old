<% @title=t('buttons.personal.active') %>

<%= bootstrap_form(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.error_messages %>

    <%= f.fieldset do %>
        <%= f.legend(t('buttons.personal.active')) %>

        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        <% end %>
    <% end %>


    <%= f.submit t('buttons.personal.active') %><%= render 'devise/shared/links' %>
<% end %>


