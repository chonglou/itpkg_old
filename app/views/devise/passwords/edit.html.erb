<% @title=t('buttons.personal.change_password') %>

<%= bootstrap_form(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
    <%- # devise_error_messages!   -%>
    <%= f.hidden_field :reset_password_token %>

    <%= f.fieldset do %>
        <%= f.legend(t('buttons.personal.login')) %>
        <%= f.group do %>
            <%= f.label :password %>
            <%= f.password_field :password, autofocus: true, autocomplete: 'off' %>
        <% end %>
        <%= f.group do %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: 'off' %>
        <% end %>
        <%= f.button_group do %>
            <%= f.submit t('buttons.personal.change_password') %><%= render 'devise/shared/links' %>
        <% end %>
    <% end %>
<% end %>


