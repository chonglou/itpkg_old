<% @title=t('buttons.personal.forgot_password') %>

<%= bootstrap_form(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
    <%-# devise_error_messages! -%>
    <%= f.error_messages %>

    <%= f.fieldset do %>
        <%= f.legend(t('buttons.personal.forgot_password')) %>

        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        <% end %>
    <% end %>


    <%= f.submit t('buttons.personal.forgot_password') %><%= render 'devise/shared/links' %>
<% end %>


