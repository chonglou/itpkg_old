<% @title=t('titles.personal.edit_profile') %>
<%= render 'layouts/button_group', items:[{label:@title, url:edit_user_registration_path, style:'primary'}, {url:personal_generate_keys_path, label:t('links.user.generate_keys'), data: {confirm: t('labels.are_you_sure')}, method: :post, style:'danger'}], back:true%>

<%= bootstrap_form(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
    <%- # devise_error_messages!    -%>
    <%= f.error_messages %>

    <%= f.fieldset do %>
        <%= f.legend(@title) %>
        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, readonly: true %>
        <% end %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <%= f.group do %>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: 'off', placeholder: t('placeholders.do_not_change_password') %>
        <% end %>
        <%= f.group do %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: 'off' %>
        <% end %>
        <%= f.group do %>
            <%= f.label :current_password %>
            <%= f.password_field :current_password, autocomplete: 'off', placeholder: t('placeholders.need_password_to_change') %>
        <% end %>
        <%= f.button_group do %>
            <%= f.submit t('buttons.update') %>
        <% end %>
    <% end %>

<% end %>
<p>&nbsp;</p>
<fieldset>
  <legend><%= t('links.user.update_public_key') %></legend>
  <%= form_tag(personal_update_public_key_path) do %>
      <%= text_area_tag :public_key,current_user.ssh_key ? current_user.ssh_key.public_key : '', class:'form-control', rows:12%>
      <br>
      <%= submit_tag t('buttons.submit'), class: 'btn btn-primary'%>
  <% end %>
</fieldset>
<p>&nbsp;</p>
<fieldset>
  <legend><%= t('labels.user_logo') %></legend>
  <img src="<%= email2logo resource.email %>" title="<%= resource.email %>">
</fieldset>
<p>&nbsp;</p>
<fieldset>
  <legend><%= t('labels.unhappy') %></legend>
  <div class="row">
    <div class="col-sm-2">
      <%= button_to t('labels.kill_self'), registration_path(resource_name), data: {confirm: t('labels.are_you_sure')}, method: :delete, class: 'btn btn-danger' %>
    </div>
    <div class="col-sm-2">
      <%= link_to t('buttons.back'), :back, class: 'btn btn-info' %>
    </div>
  </div>

</fieldset>





