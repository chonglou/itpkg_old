<% @title=t('buttons.personal.login') %>

<%= bootstrap_form(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.error_messages %>

    <%= f.fieldset do %>
        <%= f.legend(t('buttons.personal.login')) %>

        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        <% end %>
        <%= f.group do %>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: 'off' %>
        <% end %>

        <% if devise_mapping.rememberable? -%>
            <%= f.group do %>
                <%= f.check_box_group do %>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, mode: 'checkbox' %>
                <% end %>
            <% end %>
        <% end -%>

        <%= f.button_group do %>
            <%= f.submit t('buttons.personal.login') %>
            <%= render 'devise/shared/links' %>
        <% end %>
    <% end %>

<% end %>


