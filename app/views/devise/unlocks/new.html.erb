<% @title=t('buttons.personal.unlock') %>

<%= bootstrap_form(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post}) do |f| %>
    <%-# devise_error_messages! -%>
    <%= f.error_messages %>

    <%= f.fieldset do %>
        <%= f.legend(t('buttons.personal.unlock')) %>
        <%= f.group do %>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true %>
        <% end %>
    <% end %>

    <%= f.submit t('buttons.personal.unlock') %> <%= render "devise/shared/links" %>
<% end %>


