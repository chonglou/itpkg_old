<div class="project-stories-container">
  <h4>Stories</h4>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t('tables.story.id') %></th>
        <th><%= t('tables.story.title') %></th>
        <th><%= t('tables.story.points') %></th>
        <th><%= t('tables.story.description') %></th>
        <th><%= t('tables.story.action') %></th>
      </tr>
    </thead>
    <tbody>
      <% @project.stories.each do |story| %>
        <tr>
          <td class="col-md-1"><%= story.id %></td>
          <td class="col-md-2">
            <%= link_to story.title, edit_project_story_path(@project, story) %>
          </td>
          <td class="col-md-1"><%= story.point %></td>
          <td class="col-md-7"><%= story.description %></td>
          <td class="col-md-1">
            <%= button_to t('buttons.remove'),
                          project_story_path(@project, story),
                          data: {confirm: t('labels.are_you_sure')},
                          method: :delete,
                          class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
