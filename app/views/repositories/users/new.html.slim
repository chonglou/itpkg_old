- @title = t('links.repository.user.create', name:@repository.name)
fieldset
  legend #{@title}
  = form_tag(repository_users_path, class:'form-inline') do
    div class="form-group"
      div class="input-group"
        = select_tag :user_id, options_for_select(user_select_options), class:'form-control'

    div class="form-group"
      = submit_tag t('buttons.submit'), class: 'btn btn-primary'

