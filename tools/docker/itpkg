#!/bin/sh

NAME=itpkg_instance
MNT=$(pwd)/mnt

if [ "$(id -u)" != "0" ]; then sudo='sudo' ; fi

#[ -d $MNT ] || mkdir -

if $sudo docker ps -a | grep --quiet $NAME
then
	ARGS="start $NAME"
else
	ARGS="run -p 2222:22 -p 443:443 --name $NAME -P --privileged -v /sys/fs/cgroup:/sys/fs/cgroup:ro -d itpkg:latest"
fi

case $1 in
	remove)
		$sudo docker rm $NAME
		;;
	start)
		$sudo docker $ARGS
		;;
	stop)
		$sudo docker stop $NAME
		;;
	build)
		$sudo docker build $2 -t itpkg .
		;;
	status)
		$sudo docker version
		$sudo docker info
		$sudo docker ps
		;;
	logs)
		$sudo docker logs -f $NAME
		;;
	*)
		echo 'Usage: ./itpkg.sh start|stop|status|remove|logs'
esac

